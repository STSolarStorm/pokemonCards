extends layout

block content
  include mixins/cardPokemon
  div.container
    form(action='/' method='get')
      div.form-input
        label(for='type') Type
        select(id='type' name='type' autocomplete='off')
          each type in types
            option(value=type selected = (type === searchType)) #{type}
        div.form-input
          label(for='random') Random
          input(type='checkbox' name='random' id='random' checked=searchRandom)
      button.button.save(type='submit') Filter
  div.container
    div.add-button-row
      a.button.add(href="/add") Add Pokemon Card
  div.container
    each pokemonCard in pokemonCards
      +cardPokemon(pokemonCard)
